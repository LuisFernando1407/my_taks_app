<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_logo"
                android:layout_marginTop="20dp"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <TextView
                android:gravity="center"
                android:textSize="21dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:text="My Tasks"
                android:fontFamily="@font/montserrat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/black_app"
                android:textStyle="bold"
                android:text="Acessar minha conta"
                android:fontFamily="@font/montserrat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <EditText
                android:id="@+id/email"
                android:layout_marginTop="40dp"
                android:hint="E-mail"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:fontFamily="@font/montserrat"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:background="@drawable/bg_edit_text_gray"
                android:layout_width="match_parent"
                android:layout_height="45dp" />

            <EditText
                android:id="@+id/pass"
                android:layout_marginTop="20dp"
                android:hint="Senha"
                android:inputType="textPassword"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:fontFamily="@font/montserrat"
                android:imeOptions="actionDone"
                android:background="@drawable/bg_edit_text_gray"
                android:layout_width="match_parent"
                android:layout_height="45dp" />

            <TextView
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:id="@+id/forgot_pass"
                android:textSize="14dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/gray_strong_app"
                android:text="Esqueci minha senha"
                android:fontFamily="@font/montserrat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatButton
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/black_app"
                android:id="@+id/enter"
                android:text="Entrar"
                android:fontFamily="@font/montserrat"
                android:background="@drawable/bg_button_success"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginTop="30dp"
                android:layout_width="40dp"
                android:layout_height="5dp"
                android:background="@color/gray_app"
                />

            <TextView
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/black_app"
                android:textStyle="bold"
                android:text="Ainda nÃ£o tem conta? Cadastre-se!"
                android:fontFamily="@font/montserrat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/register"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:textColor="@color/black_app"
                android:text="Cadastrar"
                android:fontFamily="@font/montserrat"
                android:background="@drawable/bg_button_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>